<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlayout_others"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:background="@drawable/others_item_selector"
    android:clickable="true"
    android:padding="1dp" >

    <TextView
        android:id="@+id/tv_identity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#898989"
        android:gravity="center"
        android:text="空位"
        android:textSize="@dimen/others_view_test_size" />

    <GridView
        android:id="@+id/gv_equipment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_identity"
        android:listSelector="@null"
        android:numColumns="2" />

    <RelativeLayout
        android:id="@+id/skill_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/gv_equipment_container"
        android:layout_marginTop="1dp" >

        <TextView
            android:id="@+id/tv_hp_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#898989"
            android:text="0"
            android:textSize="@dimen/others_view_test_size" />

        <TextView
            android:id="@+id/tv_cards_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/tv_hp_count"
            android:background="#898989"
            android:text="0"
            android:textSize="@dimen/others_view_test_size" />

        <TextView
            android:id="@+id/tv_skills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_toRightOf="@id/tv_cards_count"
            android:background="#898989"
            android:text=""
            android:textSize="@dimen/others_view_test_size" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/judge_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/skill_layout"
        android:layout_marginTop="1dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_judge01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="#898989"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/others_view_test_size" />

        <TextView
            android:id="@+id/tv_judge02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.0"
            android:background="#898989"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/others_view_test_size" />
    </LinearLayout>

</RelativeLayout>